{% extends "common/layout/base.njk" %}

{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageTitleName = 'general.selectPhotoId.pageTitle' | translate %}
{% set hrefBack = back %} 
{% set showBack = true %}
{% set showError = isInvalid %}

{% block content %}

<h1 class="govuk-heading-l"> {{ "general.passportExpiry.header" | translate }} </h1>

<form id="form-tracking" action="/cic/oauth2/passportDetails" method="post">
<p>{{ "general.passportExpiry.body" | translate }}</p>

{{ govukDateInput({
  id: "passport-expiry",
  namePrefix: "passport-expiry",
  fieldset: {
    legend: {
      text: "general.passportExpiry.dateOfExpiry" | translate
    }
  },
  hint: {
    text: "general.passportExpiry.example" | translate
  }
}) }}


{{ govukButton({
  text: "general.buttons.continue" | translate,
  type: "submit"
}) }}

</form>

{% endblock %}